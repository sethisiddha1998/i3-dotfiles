[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
enable-scroll = false

label-unfocused-foreground = #2aa198
label-focused-foreground = #268bd2
label-urgent-foreground = #dc322f

[module/time]
type = internal/date

interval = 1.0

date =  %H:%M

[module/date]
type = internal/date
date =  %Y-%m-%d% 
label = %date%

[module/battery]
type = internal/battery

battery = BAT0

poll-interval = 1

full-at = 95

label-discharging = %percentage%%
label-charging = %percentage%%
label-full = %percentage%%

format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
format-charging =  <label-charging>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/volume]
type = internal/pulseaudio
format-volume = %{A3:exec kitty -e pulsemixer & disown:}<ramp-volume> <label-volume>%{A}
format-muted = %{A3:exec kitty -e pulsemixer & disown:} 0%%{A}
interval = 1

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/mpd]
type = internal/mpd

label-offline = mpd is offline
format-online = %{A3:exec kitty -e ncmpcpp & disown:}<icon-prev> <toggle> <icon-next> <bar-progress> <label-song>%{A}
format-offline = %{A3:exec kitty -e ncmpcpp & disown:}<label-offline>%{A}
host = 127.0.0.1
port = 6600
icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 128 
label-song-ellipsis = true

bar-progress-width = 10
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─

[module/backlight]
type = internal/xbacklight

; Use the following command to list available cards:
; $ ls -1 /sys/class/backlight/
card = intel_backlight

format = <ramp> <label>

label = %percentage%%

ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/wlan]
type = internal/network

interface = wlo1

interval = 5

label-connected = %{A3:exec networkmanager_dmenu & disown:} %essid%%{A}
label-disconnected = %{A3:exec networkmanager_dmenu & disown:} Not Connected%{A}

[module/cpu]
type = internal/cpu
label = %{A3:kitty -e htop -s PERCENT_CPU & disown:} %percentage%%%{A}

[module/memory]
type = internal/memory
label = %{A3:kitty -e htop -s PERCENT_MEM & disown:} %percentage_used%%%{A}

[module/network]
type = internal/network
interface = wlo1
label-connected =  %downspeed% |  %upspeed%

[module/temperature]
type = internal/temperature
warn-temperature = 60
label = %{A3:kitty -e watch sensors & disown:} %temperature-c%%{A}
label-warn = %{A3:kitty -e watch sensors & disown:} %temperature-c%%{A}
label-warn-foreground = #dc322f

[module/updates]
type = custom/script
exec = ~/.config/polybar/scripts/updates-arch-combined.sh
label = %{A3:exec kitty -e yay -Syu --noconfirm --answerclean None --answerdiff None --answeredit None --answerupgrade None --nocleanmenu --nodiffmenu --noeditmenu --noupgrademenu --removemake & disown:} %output%%{A}
interval = 600

